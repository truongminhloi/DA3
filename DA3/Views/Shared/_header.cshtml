                                <li><a href="@Url.Action("Admin" , "Favorite")">Quản lý yêu thích</a></li>
                                <li><a href="@Url.Action("Admin" , "Feedback")">Quản lý phản hồi</a></li>
                                <li><a href="#">Báo cáo thống kê</a></li>
                            </ul>
                        </div><!-- End .header-menu -->
                    </div><!-- End .header-dropdown -->
                    <ul class="top-menu">
                        <li>
                            <ul>
                                <li></li>
                                <li></li>
                                <li>
                                    @if (!string.IsNullOrEmpty(@Context.Session.GetString("FullName")))
                                    {
                                        <a href="@Url.Action("Index" , "Login")">
                                            <i class="icon-user"></i>
                                            Xin chào, @Context.Session.GetString("FullName")
                                        </a>
                                    }
                                    else
                                    {
                                        <a href="@Url.Action("Index" , "Login")">
                                            <i class="icon-user"></i>
                                            Đăng nhập / Đăng ký
                                        </a>
                                    }
                                </li>
                            </ul>
                        </li>
                    </ul><!-- End .top-menu -->
                </div><!-- End .header-right -->
            </div><!-- End .container-fluid -->
        </div><!-- End .header-top -->
        <div class="header-middle sticky-header">
            <div class="container-fluid">
                <div class="header-left">
                    <a href="index.html" class="logo">
                        <img src="assets/images/logo.png" alt="Molla Logo" width="105" height="25">
                    </a>

                    <nav class="main-nav">
                        <ul class="menu sf-arrows">
                            <li class="megamenu-container active">
                                <a href="@Url.Action("Index" , "Home")">Trang chủ</a>
                            </li>
                        </ul>
                    </nav>
                    <nav class="main-nav">
                        <ul class="menu sf-arrows">
                            <li class="megamenu-container active">
                                <a href="@Url.Action("Index" , "Product")">Sản phẩm</a>
                            </li>
                        </ul>
                    </nav>
                    <nav class="main-nav">
                        <ul class="menu sf-arrows">
                            <li class="megamenu-container active">
                                <a href="@Url.Action("Index" , "About")">Về chúng tôi</a>
                            </li>
                        </ul>
                    </nav>
                    <nav class="main-nav">
                        <ul class="menu sf-arrows">
                            <li class="megamenu-container active">
                                <a href="@Url.Action("Index" , "Contact")">Liên lạc với chúng tôi</a>
                            </li>
                        </ul>
                    </nav>

