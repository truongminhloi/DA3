@using Microsoft.AspNetCore.Http;
<div class="page-wrapper">
    <header class="header">
        <div class="header-top">
            <div class="container-fluid">
                <div class="header-left">
                </div><!-- End .header-left -->

                <div class="header-right">
                    <div class="header-dropdown">
                        <a href="#">Admin</a>
                        <div class="header-menu">
                            <ul>
                                <li><a href="@Url.Action("Admin" , "Product")">Quản lý sản phẩm</a></li>
                                <li><a href="@Url.Action("Admin" , "category")">Quản lý loại sản phẩm</a></li>
                                <li><a href="@Url.Action("Admin" , "Account")">Quản lý người dùng</a></li>
