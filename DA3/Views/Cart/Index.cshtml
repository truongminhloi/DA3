@{
    ViewData["Title"] = "Giỏ hàng";
    Layout = "_Layout";
}
@model CartViewModel

<!DOCTYPE html>
<html lang="en">

<head>
</head>

<body>
    <div class="page-wrapper">
        <main class="main">
            <div class="page-header text-center" style="background-image: url('assets/images/page-header-bg.jpg')">
                <div class="container">
                    <h1 class="page-title">Giỏ hàng</h1>
                </div><!-- End .container -->
            </div><!-- End .page-header -->
            <nav aria-label="breadcrumb" class="breadcrumb-nav">
                <div class="container">
                </div><!-- End .container -->
            </nav><!-- End .breadcrumb-nav -->

            <div class="page-content">
                <div class="cart">
                    <div class="container">
                        <div class="row">
                            @if (@Model != null)
                            {
                                <div class="col-lg-9">
                                    <table class="table table-cart table-mobile">
                                        <thead>
                                            <tr>
                                                <th>Sản phẩm</th>
                                                <th>Giá</th>
                                                <th>Số lượng</th>
                                                <th>Thành tiền</th>
                                                <th></th>
                                            </tr>
                                        </thead>

                                        <tbody>

                                            @foreach (var cartDetail in @Model.CartModel.CartDetails)
                                            {
                                                <tr>
                                                    <td class="product-col">
                                                        <div class="product">
                                                            <figure class="product-media">
                                                                <a href="#">
                                                                    <img src="assets/images/products/table/product-1.jpg" alt="Product image">
                                                                </a>
                                                            </figure>

                                                            <h3 class="product-title">
                                                                <a href="#">@cartDetail.ProductName</a>
                                                            </h3><!-- End .product-title -->
                                                        </div><!-- End .product -->
                                                    </td>
                                                    <td class="price-col">@cartDetail.PriceProduct</td>
                                                    <td class="price-col">@cartDetail.Quantity</td>
                                                    @*<td class="quantity-col">
                                            <div class="cart-product-quantity">
                                            <input type="number" class="form-control" value="@cartDetail.Quantity" min="1" max="10" step="1" data-decimals="0" required>
                                            </div><!-- End .cart-product-quantity -->
                                            </td>*@
                                                    <td class="total-col">@cartDetail.PricePerProdcut</td>
                                                    <td class="remove-col"><button class="btn-remove"><i class="icon-close"></i></button></td>
                                                </tr>
                                            }
                                        </tbody>
                                    </table><!-- End .table table-wishlist -->
                                </div>

                                <!-- End .col-lg-9 -->
                                <aside class="col-lg-3">
                                    <div class="summary summary-cart">
                                        <h3 class="summary-title">Đơn hàng</h3><!-- End .summary-title -->

                                        <table class="table table-summary">
                                            <tbody>
                                                <tr class="summary-subtotal">
                                                    <td>Tiền sản phẩm:</td>
                                                    <td>@Model.CartModel.PricePerAllProducts</td>
                                                </tr><!-- End .summary-subtotal -->
                                                <tr class="summary-shipping">
                                                    <td>Phí giao hàng:</td>
                                                    <td>&nbsp;</td>
                                                </tr>

                                                <tr class="summary-shipping-row">
                                                    <td>
                                                        <div class="custom-control custom-radio">
                                                            <input type="radio" id="free-shipping" name="shipping" class="custom-control-input" checked>
                                                            <label class="custom-control-label" for="free-shipping">Cơ bản</label>
                                                        </div><!-- End .custom-control -->
                                                    </td>
                                                    <td>@Model.PriceShipFree</td>
                                                </tr><!-- End .summary-shipping-row -->

                                                <tr class="summary-shipping-row">
                                                    <td>
                                                        <div class="custom-control custom-radio">
                                                            <input type="radio" id="standart-shipping" name="shipping" class="custom-control-input">
                                                            <label class="custom-control-label" for="standart-shipping">Nhanh:</label>
                                                        </div><!-- End .custom-control -->
                                                    </td>
                                                    <td>@Model.PriceShipStandard</td>
                                                </tr><!-- End .summary-shipping-row -->

                                                <tr class="summary-shipping-row">
                                                    <td>
                                                        <div class="custom-control custom-radio">
                                                            <input type="radio" id="express-shipping" name="shipping" class="custom-control-input">
                                                            <label class="custom-control-label" for="express-shipping">Siêu tốc:</label>
                                                        </div><!-- End .custom-control -->
                                                    </td>
                                                    <td>@Model.PriceShipExpress</td>
                                                </tr><!-- End .summary-shipping-row -->

                                                <tr class="summary-shipping-estimate">
                                                    <td>@Model.CartModel.Address<br> <a href="dashboard.html">Thay đổi địa chỉ</a></td>
                                                    <td>&nbsp;</td>
                                                </tr><!-- End .summary-shipping-estimate -->

                                                <tr class="summary-total">
                                                    <td>Thành tiền:</td>
                                                    <td>@Model.CartModel.TotalPrice</td>
                                                </tr><!-- End .summary-total -->
                                            </tbody>
                                        </table><!-- End .table table-summary -->

                                        <a href="@Url.Action("Create" , "Checkout")" class="btn btn-outline-primary-2 btn-order btn-block">Đặt hàng</a>
                                    </div><!-- End .summary -->

                                    <a href="@Url.Action("Index" , "Product")" class="btn btn-outline-dark-2 btn-block mb-3"><span>Tiếp tục mua hàng</span><i class="icon-refresh"></i></a>
                                </aside>

                                <!-- End .col-lg-3 -->
                            }
                            else
                            {
                                <h3 class="center">Chưa có sản phẩm nào.<a href="@Url.Action("Index" , "Product")" class="forgot-link"> Mua hàng ngay!</a></h3>
                            }
                        </div><!-- End .row -->
                    </div><!-- End .container -->
                </div><!-- End .cart -->
            </div><!-- End .page-content -->
        </main><!-- End .main -->
    </div>
</body>
</html>