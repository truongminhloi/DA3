@{
    ViewData["Title"] = "Quản lý đơn hàng";
    Layout = "_Layout";
}
@model ProductViewModel

<!DOCTYPE html>
<html lang="en">

<head>
</head>

<body>
    <div class="page-wrapper">
        <main class="main">
            <div class="page-content">
                <div class="cart">
                    <div class="container">
                        <div class="form-footer">
                            <button type="submit" onclick="location.href='@Url.Action("Create", "Product")'" class="btn btn-outline-primary-2">
                                <span>Thêm mới</span>
                                <i class="icon-long-arrow-right"></i>
                            </button>
                        </div><!-- End .form-footer -->
                        <div class="row">
                            <div class="col-lg-12">
                                <table class="table table-cart table-mobile">
                                    <thead>
                                        <tr>
                                            <th><b>Id</b></th>
                                            <th><b>Tên sản phẩm</b></th>
                                            <th><b>Tên loại sản phẩm</b></th>
                                            <th><b>Đường dẫn ảnh</b></th>
                                            <th><b>Giá</b></th>
                                            <th><b>Mô tả</b></th>
                                            <th><b>Màu</b></th>
                                            <th><b>Trạng thái</b></th>
                                            <th></th>
                                        </tr>
                                    </thead>

                                    <tbody>
                                        @foreach (var item in @Model?.Products)
                                        {
                                            <tr>
                                                <td class="price-col">@item?.Id</td>
                                                <td class="price-col">@item?.Name</td>
                                                <td class="price-col">@item?.CategoryName</td>
                                                <td class="price-col">@item?.Url</td>
                                                <td class="price-col">@item?.Price</td>
                                                <td class="price-col">@item?.Describe</td>
                                                <td class="price-col">@item?.Color</td>
                                                <td class="price-col">@item?.Status</td>
                                                <td class="remove-col">
                                                    <button class="btn-remove" onclick="location.href='@Url.Action("Edit", "Product", new {productId = @item.Id})'"><i class="icon-edit"></i></button>
                                                    <button class="btn-remove" onclick="location.href='@Url.Action("Remove", "Product", new {productId = @item.Id})'"><i class="icon-close"></i></button>
                                                </td>
                                            </tr>
                                        }
                                    </tbody>
                                </table><!-- End .table table-wishlist -->
                            </div><!-- End .col-lg-9 -->
                        </div><!-- End .row -->
                    </div><!-- End .container -->
                </div><!-- End .cart -->
            </div><!-- End .page-content -->
        </main><!-- End .main -->
    </div>
</body>
</html>