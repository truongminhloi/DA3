@{
    ViewData["Title"] = "Sản phẩm";
    Layout = "_Layout";
}
@model ProductViewModel
<!DOCTYPE html>
<html lang="en">
<head>
</head>

<body>
    <div class="page-wrapper">

        <main class="main">
            <div class="page-header text-center" style="background-image: url('assets/images/page-header-bg.jpg')">
                <div class="container-fluid">
                    <h1 class="page-title">Sản phẩm</h1>
                </div><!-- End .container-fluid -->
            </div><!-- End .page-header -->
            <nav aria-label="breadcrumb" class="breadcrumb-nav mb-2">
                <div class="container-fluid">
                </div><!-- End .container-fluid -->
            </nav><!-- End .breadcrumb-nav -->

            <div class="page-content">
                <div class="container">
                    @*<div class="toolbox">
                    <div class="toolbox-left">
                    <a href="#" class="sidebar-toggler"><i class="icon-bars"></i>Filters</a>
                    </div><!-- End .toolbox-left -->

                    <div class="toolbox-center">
                    <div class="toolbox-info">
                    Showing <span>12 of 56</span> Products
                    </div><!-- End .toolbox-info -->
                    </div><!-- End .toolbox-center -->

                    <div class="toolbox-right">
                    <div class="toolbox-sort">
                    <label for="sortby">Sort by:</label>
                    <div class="select-custom">
                    <select name="sortby" id="sortby" class="form-control">
                    <option value="popularity" selected="selected">Most Popular</option>
                    <option value="rating">Most Rated</option>
                    <option value="date">Date</option>
                    </select>
                    </div>
                    </div><!-- End .toolbox-sort -->
                    </div><!-- End .toolbox-right -->
                    </div><!-- End .toolbox -->
                    *@
                    <div class="products">
                        <div class="row">
                            @foreach (var item in Model.Products)
                            {
                                <div class="col-12 col-md-8 col-lg-8 col-xl-6 col-xxl-4">
                                    <div class="product">
                                        <figure class="product-media">
                                            <a href="product.html">
                                                <img src="@item.Url" alt="Product image" class="product-image">
                                            </a>

                                            <div class="product-action-vertical">
                                                <a href="@Url.Action("HandelSaveChange", "Favorite", new {productId = @item.Id})" class="btn-product-icon btn-wishlist btn-expandable"><span>Yêu thích</span></a>
                                            </div><!-- End .product-action -->

                                            <div class="product-action action-icon-top">
                                                <a href="@Url.Action("Create", "Cart", new {ProductId = @item.Id})" class="btn-product btn-cart"><span>Thêm vào giỏ hàng</span></a>
                                                <a href="#" class="btn-product btn-quickview" title="Quick view"><span>Xem chi tiết</span></a>
                                            </div><!-- End .product-action -->
                                        </figure><!-- End .product-media -->

                                        <div class="product-body">
                                            <h3 class="product-title"><a href="product.html">@item.Name</a></h3><!-- End .product-title -->
                                            <div class="product-price">
                                                @item.Price
                                            </div><!-- End .product-price -->
                                            <div class="product-nav product-nav-dots">
                                                <a href="#" style="background: @item.Color;"><span class="sr-only">Màu</span></a>
                                            </div><!-- End .product-nav -->
                                        </div><!-- End .product-body -->
                                    </div><!-- End .product -->
                                </div>

                                <!-- End .col-sm-6 col-lg-4 col-xl-3 -->
                            }
                        </div><!-- End .products -->
                        <div class="load-more-container text-center">
                            <a href="#" class="btn btn-outline-darker btn-load-more">Xem thêm sản phẩm<i class="icon-refresh"></i></a>
                        </div><!-- End .load-more-container -->
                    </div><!-- End .page-content -->
        </main><!-- End .main -->
    </div><!-- End .modal -->
</body>
</html>