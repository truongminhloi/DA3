@{
    ViewData["Title"] = "Quản lý yêu thích";
    Layout = "_Layout";
}
@model FavoriteViewModel

<!DOCTYPE html>
<html lang="en">

<head>
</head>

<body>
    <div class="page-wrapper">
        <main class="main">
            <div class="page-header text-center" style="background-image: url('../assets/images/page-header-bg.jpg')">
                <div class="container">
                    <h1 class="page-title">Quản lý yêu thích</h1>
                </div><!-- End .container -->
            </div><!-- End .page-header -->
            <div class="page-content">
                <div class="cart">
                    <div class="container">
                        <div class="row">
                            <div class="col-lg-12">
                                <table class="table table-cart table-mobile">
                                    <thead>
                                        <tr>
                                            <th class="col-lg-4"><b>ID</b></th>
                                            <th><b>Tên người dùng</b></th>
                                            <th><b>Tên sản phẩm</b></th>
                                            <th></th>
                                        </tr>
                                    </thead>

                                    <tbody>
                                        @foreach (var item in @Model?.FavoriteModels)
                                        {
                                            <tr>
                                                <td class="price-col">@item?.Id</td>
                                                <td class="price-col">@item?.UserName</td>
                                                <td class="price-col">@item?.ProductName</td>
                                            </tr>
                                        }
                                    </tbody>
                                </table><!-- End .table table-wishlist -->
                            </div><!-- End .col-lg-9 -->
                        </div><!-- End .row -->
                    </div><!-- End .container -->
                </div><!-- End .cart -->
            </div><!-- End .page-content -->
        </main><!-- End .main -->
    </div>
</body>
</html>