@{
    ViewData["Title"] = "Quản lý đơn hàng";
    Layout = "_Layout";
}
@model OrderViewModel

<!DOCTYPE html>
<html lang="en">

<head>
</head>

<body>
    <div class="page-wrapper">
        <main class="main">
            <div class="page-content">
                <div class="cart">
                    <div class="container">
                        <div class="row">
                            <div class="col-lg-12">
                                <table class="table table-cart table-mobile">
                                    <thead>
                                        <tr>
                                            <th><b>Họ & tên</b></th>
                                            <th><b>Ngày giao</b></th>
                                            <th><b>Phương thức thanh toán</b></th>
                                            <th><b>Tổng giá trị</b></th>
                                            <th><b>Ghi chú</b></th>
                                            <th><b>Trạng thái</b></th>
                                            <th></th>
                                        </tr>
                                    </thead>

                                    <tbody>
                                        @foreach (var item in @Model?.OrderModels)
                                        {
                                            <tr>
                                                <td class="price-col">@item?.UserName</td>
                                                <td class="price-col">@item?.DeliveryDate</td>
                                                <td class="price-col">@item?.PayMethod</td>
                                                <td class="price-col">@item?.TotalPrice</td>
                                                <td class="price-col">@item?.Note</td>
                                                <td class="price-col">@item?.StatusName</td>
                                                <td class="remove-col">
                                                    <button class="btn-remove" onclick="location.href='@Url.Action("Edit", "Checkout", new {OrderId = @item.Id})'"><i class="icon-edit"></i></button>
                                                </td>
                                            </tr>
                                        }
                                    </tbody>
                                </table><!-- End .table table-wishlist -->
                            </div><!-- End .col-lg-9 -->
                        </div><!-- End .row -->
                    </div><!-- End .container -->
                </div><!-- End .cart -->
            </div><!-- End .page-content -->
        </main><!-- End .main -->
    </div>
</body>
</html>